{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es6",
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "hooks/*": ["hooks/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "helpers/*": ["helpers/*"],
      "types/*": ["types/*"],
      "store/*": ["store/*"],
      "styles/*": ["styles/*"],
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "Node",
      "target": "es5",
      "esModuleInterop": true
    }
  }
}
